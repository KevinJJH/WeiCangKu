<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="160dp"
    android:minWidth="300dp"
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cacaca" />

    <LinearLayout
        android:id="@+id/dialog_bottom3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/dialog_leftspacer4"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:visibility="gone" />

        <Button
            android:id="@+id/dialog_button31"
            android:layout_width="0px"
            android:layout_height="45dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:maxLines="2"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:singleLine="true"
            android:background="#ffffff"/>
        <!-- android:background="@drawable/dialog_btn_selector" -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cacaca" />

        <LinearLayout
            android:id="@+id/dialog_rightspacer4"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_bottom5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/dialog_leftspacer6"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:visibility="gone" />

        <Button
            android:id="@+id/dialog_button32"
            android:layout_width="0px"
            android:layout_height="45dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:maxLines="2"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:singleLine="true"
            android:background="#ffffff"/>
        <!-- android:background="@drawable/dialog_btn_selector" -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cacaca" />

        <LinearLayout
            android:id="@+id/dialog_rightspacer5"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:visibility="gone" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dialog_bottom4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/dialog_leftspacer5"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:visibility="gone" />

        <Button
            android:id="@+id/dialog_button33"
            android:layout_width="0px"
            android:layout_height="45dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:maxLines="2"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:singleLine="true"
            android:background="#ffffff"/>
        <!-- android:background="@drawable/dialog_btn_selector" -->
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cacaca" />

        <LinearLayout
            android:id="@+id/dialog_rightspacer6"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:orientation="horizontal"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>